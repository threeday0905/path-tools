{
  "name": "path-tools",
  "version": "0.2.0",
  "description": "common path toolkits, based on Node.js path module",
  "main": "index.js",
  "scripts": {
    "hint": "jscs {*.js,test} & jshint . --exclude-path .gitignore",
    "mocha": "mocha 'test/**/*.test.js' --report spec --harmony",
    "cov": "node --harmony node_modules/.bin/istanbul cover --report html ./node_modules/mocha/bin/_mocha -- 'test/**/*.test.js' --harmony --reporter dot ",
    "test": "jscs {*.js,test} & jshint . --exclude-path .gitignore && node --harmony node_modules/.bin/istanbul cover --report html ./node_modules/mocha/bin/_mocha -- 'test/**/*.test.js' --harmony --reporter dot "
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:threeday0905/path-tools.git"
  },
  "keywords": [
    "path",
    "utils"
  ],
  "author": "Herman Lee <threeday0905@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/threeday0905/path-tools/issues"
  },
  "homepage": "https://github.com/threeday0905/path-tools",
  "devDependencies": {
    "chai": "*",
    "istanbul": "*",
    "jscs": "*",
    "jshint": "*",
    "mocha": "*",
    "rewire": "*",
    "sinon": "*"
  },
  "dependencies": {
    "args-expect": "0.2.1"
  }
}
